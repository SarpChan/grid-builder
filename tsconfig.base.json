{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@grid-builder/components": ["components/src/index.ts"],
      "@grid-builder/models": ["models/src/index.ts"],
      "@grid-builder/state": ["state/src/index.ts"],
      "@grid-builder/utils": ["utils/src/index.ts"],
      "@spartan-ng/ui-accordion-helm": ["ui-accordion-helm/src/index.ts"],
      "@spartan-ng/ui-button-helm": ["ui-button-helm/src/index.ts"],
      "@spartan-ng/ui-checkbox-helm": ["ui-checkbox-helm/src/index.ts"],
      "@spartan-ng/ui-command-helm": ["ui-command-helm/src/index.ts"],
      "@spartan-ng/ui-dialog-helm": ["ui-dialog-helm/src/index.ts"],
      "@spartan-ng/ui-icon-helm": ["ui-icon-helm/src/index.ts"],
      "@spartan-ng/ui-input-helm": ["ui-input-helm/src/index.ts"],
      "@spartan-ng/ui-label-helm": ["ui-label-helm/src/index.ts"],
      "@spartan-ng/ui-menu-helm": ["ui-menu-helm/src/index.ts"],
      "@spartan-ng/ui-popover-helm": ["ui-popover-helm/src/index.ts"],
      "@spartan-ng/ui-radiogroup-helm": ["ui-radiogroup-helm/src/index.ts"],
      "@spartan-ng/ui-separator-helm": ["ui-separator-helm/src/index.ts"],
      "@spartan-ng/ui-sheet-helm": ["ui-sheet-helm/src/index.ts"],
      "@spartan-ng/ui-switch-helm": ["ui-switch-helm/src/index.ts"],
      "@spartan-ng/ui-table-helm": ["ui-table-helm/src/index.ts"],
      "@spartan-ng/ui-tabs-helm": ["ui-tabs-helm/src/index.ts"],
      "@spartan-ng/ui-tooltip-helm": ["ui-tooltip-helm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
